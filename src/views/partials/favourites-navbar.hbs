<script>
  document.addEventListener("DOMContentLoaded", () => { if (typeof L !== 'undefined') { const map =
  L.map("favourites-map").setView([53.35, -6.26], 6); L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png",
  { attribution: '&copy; OpenStreetMap contributors' }).addTo(map); const poiData =
  {{{json favourites}}}; poiData.forEach((poi) => { if (poi.latitude && poi.longitude) { L.marker([poi.latitude,
  poi.longitude]) .addTo(map) .bindPopup(`<strong>${poi.name}</strong><br>${poi.category}<br>Visited:
  ${poi.visitDate}`); } }); } else { console.error("Leaflet (L) is not defined."); } });
</script>