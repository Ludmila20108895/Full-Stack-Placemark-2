{{> navbar}}

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <h1 class="title">Log in</h1>

         <!-- Include the error partial to display any validation or login errors -->
         <!-- Displays those errors passed from controller -->
        {{> error}}

        <form action="/login" method="POST"> <!-- Sends login credentials to /login (via POST) -->
          <div class="field">
            <label class="label">Email</label>
            <input class="input" type="email" placeholder="Enter email" name="email" required>
          </div>

          <div class="field">
            <label class="label">Password</label>
            <input class="input" type="password" placeholder="Enter Password" name="password" required>
          </div>

          <button class="button is-warning is-fullwidth">Log In</button>
        </form>
      </div>
    </div>
  </div>
</section>

{{> footer}}